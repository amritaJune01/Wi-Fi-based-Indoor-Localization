<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom1"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350sp"
            app:cardElevation="4sp"
            app:cardUseCompatPadding="true"
            android:layout_margin="8sp"
            app:cardCornerRadius="25sp"
            android:id="@+id/cardView1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background_color_1"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/settings_avatar"
                    android:layout_gravity="center"
                    android:layout_marginTop="30sp"
                    android:layout_width="80sp"
                    android:layout_height="80sp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Jose Mourinho"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Mourinho@footballmanager.com"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="320sp"
            app:cardBackgroundColor="@color/purple_200"
            android:layout_marginTop="280sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            app:cardElevation="4sp"
            app:cardCornerRadius="30sp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background_color_2"
                android:orientation="vertical">



                <EditText
                    android:id="@+id/syncTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="100sp"
                    android:layout_marginRight="30sp"
                    android:backgroundTint="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="14dp"
                    android:hint="Enter the Sync Time (sec)"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="#939090"
                    android:textCursorDrawable="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black"
                    android:background="@drawable/login_button_background"
                    android:text="Submit"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="30sp"
            android:textColor="@color/black"
            android:background="@drawable/login_button_background"
            android:text="LogOut" />

    </RelativeLayout>
</LinearLayout>
